{
  "title": "Ghostty: ESC / Cmd+J -> switch to ABC then send ESC",
  "rules": [
    {
      "description": "Ghostty only: ESC -> im-select ABC, then ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "escape" },
          "to": [
            { "select_input_source": { "input_source_id": "com.apple.keylayout.ABC" } },
            { "key_code": "vk_none", "hold_down_milliseconds": 120 },
            { "key_code": "escape" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.mitchellh.ghostty"]
            }
          ]
        }
      ]
    },
    {
      "description": "Ghostty only: Cmd+J -> im-select ABC, then ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["command"], "optional": ["any"] }
          },
          "to": [
            { "select_input_source": { "input_source_id": "com.apple.keylayout.ABC" } },
            { "key_code": "vk_none", "hold_down_milliseconds": 120 },
            { "key_code": "escape" }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.mitchellh.ghostty"]
            }
          ]
        }
      ]
    }
  ]
}

