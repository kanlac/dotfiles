{
  "commands": [
    "claude plugin marketplace add ~/Documents/agile-dev",
    "claude plugin install agile-dev@agile-dev",
    "claude plugin install context7@claude-plugins-official",
    "claude plugin install plugin-dev@claude-plugins-official",
    "claude plugin install gopls-lsp@claude-plugins-official",
    "claude plugin install document-skills@anthropic-agent-skills",
    "claude plugin install example-skills@anthropic-agent-skills",
    "npx skills add vercel-labs/agent-browser -g -a claude-code codex -y ",
    "npx skills add https://github.com/anthropics/skills --skill skill-creator -g -y -a claude-code codex",
    "codex mcp add context7 -- npx -y @upstash/context7-mcp"
  ],
  "claude": {
    "mcpServers": {
      "chrome-devtools": {
        "command": "npx",
        "args": ["chrome-devtools-mcp@latest"],
        "type": "stdio"
      }
    },
    "hooks": {
      "Stop": [
        {
          "matcher": "",
          "hooks": [
            {
              "type": "command",
              "command": "say -v Sinji \"搞掂\""
            }
          ]
        }
      ]
    }
  },
  "opencode": {
    "mcp": {
      "playwright": {
        "type": "local",
        "command": ["npx", "@playwright/mcp@latest"]
      },
      "chrome-devtools": {
        "type": "local",
        "command": ["npx", "chrome-devtools-mcp@latest"]
      }
    }
  },
  "codex": {
    "config": {
      "notify": ["bash", "-lc", "say -v Sinji \"搞掂咗\""],
      "tui.notifications": true
    }
  }
}
